{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

        <div class="example-wrapper">
        {{ form_start(form) }}
        <div class="w3-container w3-red">
            <h2>Input Form</h2>
        </div>
        <h2>All fields marked with an asterisk (<font color="red">*</font>) are mandatory</h2>
        <label class="w3-text"><b>{{ form_label(form.title) }}<font color="red"> *</font></b></label>
        <br> {{ form_errors(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_help(form.title) }}
        <br>
        <label class="w3-text"><b> {{ form_label(form.url) }}<font color="red"> *</font></b></label>
        <br>{{ form_errors(form.url) }}
        {{ form_widget(form.url) }}
        {{ form_help(form.url) }}
        <br>

        <br> <label class="w3-text"><b> {{ form_label(form.description) }}</b></label>
        <br>{{ form_errors(form.description) }}
        {{ form_widget(form.description) }}
        {{ form_help(form.description) }}

        {{ form_row(form.submit) }}

        {{ form_end(form) }}

        </div>






{% endblock %}

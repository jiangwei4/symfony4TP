<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <meta name="viewport" content="width=device-width"/>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta name="viewport" content="width=device-width, minimum-scale=0.25"/>
        <meta name="viewport" content="width=device-width, maximum-scale=5.0"/>
        <meta name="viewport" content="width=device-width, user-scalable=no"/>
        <link rel="stylesheet" href="\css\style.css">
        <link rel="stylesheet" href="http://www.w3schools.com/lib/w3.css">
        <script src="\js\style.js"></script>
    </head>
    <body>

        <header>
    <div class="w3-top">
        <div class="w3-bar w3-red">
            <table></table>
           <!-- <a href="#" class="w3-bar-item"><img src="/img/netflix.png"></a>-->
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              <!--  <p>Hello {{ app.user.firstname }}</p>-->
            {% endif %}
            <a href="/" class="w3-bar-item w3-button">Home</a>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <a href="/edituser" class="w3-bar-item w3-button">Edit Profil</a>
                <a href="/createmovie" class="w3-bar-item w3-button">Create Video</a>
                <a href="/listmovie" class="w3-bar-item w3-button">List Video</a>
            {% endif %}
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                 {% if is_granted('ROLE_ADMIN') %}
                     <a href="/listusers" class="w3-bar-item w3-button">All Users</a>
                     {% endif %}
                <a href="/logout" class="w3-bar-item w3-button">Log out</a>
            {% else %}
                <a href="/signup" class="w3-bar-item w3-button">Sign up</a>
                <a href="/signin" class="w3-bar-item w3-button">Sign in</a>
            {% endif %}
        </div>
    </div>
        </header>







<br><br><br><br>





    <div class="w3-container">


        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}


    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}


    </div>
    </body>
</html>

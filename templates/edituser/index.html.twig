{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">


    {{ form_start(form) }}
    <div class="w3-container w3-red">
        <h2>Input Form</h2>
    </div>

    <label class="w3-text"><b>{{ form_label(form.firstname) }}</b></label>
    <br> {{ form_errors(form.firstname) }}
    {{ form_widget(form.firstname) }}
    {{ form_help(form.firstname) }}
    <br>
    <label class="w3-text"><b> {{ form_label(form.lastname) }}</b></label>
    <br>{{ form_errors(form.lastname) }}
    {{ form_widget(form.lastname) }}
    {{ form_help(form.lastname) }}
    <br>

    <br> <label class="w3-text"><b> {{ form_label(form.birthday) }}</b></label>
    <br>{{ form_errors(form.birthday) }}
    {{ form_widget(form.birthday) }}
    {{ form_help(form.birthday) }}

    {{ form_row(form.submit) }}

    {{ form_end(form) }}


</div>
{% endblock %}

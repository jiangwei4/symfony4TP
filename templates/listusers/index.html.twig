{% extends 'base.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% if users|length < 1 %}
        <p>Aucun utilisateur</p>
    {% endif %}

    {% for user in users %}

<br>
        <div class="w3-card-4" style="width:100%;">
            <header class="w3-container w3-blue">
                <h1>{{ user.firstname }}  {{ user.lastname }}</h1>
            </header>
            <div class="w3-container">
                <label>Birthday : {{ user.birthday|date("d/m/Y") }}</label>
            </div>
                <a href="{{ path('listuser_remove',{'id':user.id}) }}"><img src="\img\supr.png"></a>
                <a href="{{ path('listuser_edit',{'id':user.id}) }}"><img src="\img\edit.png"></a>
                <a href="{{ path('listuser_listmovie',{'id':user.id}) }}"><img src="\img\video.png"></a>
        </div>

    {% endfor %}
</div>
{% endblock %}
